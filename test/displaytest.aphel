include "test/common.aphel"

include "test/display.aphel"

main:

    out 10, rb

    ; li   ra, 0x_FF_00_00
    ; call rk, display.clear


    li rb, 0x100000
    li rf, display.framebuffer
    sw rf, rb

    li ra, 0x000000
    li rc, 0x000201
    .loop:
        out 10, rb

        add ra, ra, rc

        shl ra, ra, 40
        lsr ra, ra, 40 // zero upper bits of ra
        call rk, display.clear
        bra .loop

    ret

