
.loc 0x810
GPU:

.loc 0xA00
start:
    lli     ra, 0xFFFF
    reloc   ra, 0x0
    llis    ra, 0x0

main:
    lli     ra, 0x0
    lli     rb, 0x0 
    
    lli     rc, 0x0
    lli     rd, 0x0
    lli     re, 0x0

loop:
    cmpi    ra, 640
    bgt     increment
    bra     send_pixel
    send_pixel_end:
    add     ra, ra, 1
    add     rc, rc, 3
    add     rd, rd, 1
    add     re, re, 5
    bra     loop

increment:
    addi    rb, rb, 0x1
    llis    ra, 0x0

    cmpi    rb, 480
    bgt     render

    bra     loop

render:
    
    llis    rg, 0x6
    lui     rg, 0x0414
    sw      rg, pc, >GPU

    llis    rg, 0x8
    sw      rg, pc, >GPU
    llis    rb, 0
    bra     loop


/*
    ra = x
    rb = y
    rc = r
    rd = g
    re = b
*/

//XXYYRGB(0x03)
send_pixel:

    // sanitize
    and     ra, ra, 0xFFFF
    and     rb, rb, 0xFFFF
    and     rc, rc, 0xFF
    and     rd, rd, 0xFF
    and     re, re, 0xFF
    llis    rf, 0x03
    
    // move into position
    shl     ra, ra, 48
    shl     rb, rb, 32
    shl     rc, rc, 24
    shl     rd, rd, 16
    shl     re, re, 8

    // move into rf
    or      rf, rf, ra
    or      rf, rf, rb
    or      rf, rf, rc
    or      rf, rf, rd
    or      rf, rf, re

    sw      rf, pc, >GPU

    // restore values
    lsr     ra, ra, 48
    lsr     rb, rb, 32
    lsr     rc, rc, 24
    lsr     rd, rd, 16
    lsr     re, re, 8

    bra     send_pixel_end