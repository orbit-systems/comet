//bootup rom for the aphelion cpu, to test that memory is connected to the system
//we can use this as a boot up test for the cpu too, to test instructions

start:
	lli ra, 0xF00D
	lui ra, 0xCAFE
	llis rb, 0x0
	st ra, rb, 0x0
	ld rb, rb, 0x0
	andr rb, ra, rb
	llis rk, 0x1
	bez failure

	//initialise interrupt table
	lli ra, 0x07FF
	loop:
		//store 0x00000010 in rb (int 0)
		llis rb, 0x10
		st rb, ra, 0x0
		subi, ra, ra, 0x4
		bez success
		bra loop




success:
	llis rk, 0x0
	lui ra, 0xA
	addr pc, pc, ra
	//jump to 0xA00

failure:
	bra failure